<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue arbre des étudiants -->
        <record id="view_etudiant_tree" model="ir.ui.view">
            <field name="name">gestion.etudiant.tree</field>
            <field name="model">gestion.etudiant</field>
            <field name="arch" type="xml">
                <tree string="Étudiants">
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <field name="display_name"/>
                    <field name="cne"/>
                    <field name="filiere"/>
                    <field name="niveau"/>
                    <field name="email"/>
                    <field name="projet_count" widget="statinfo" string="Projets"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche des étudiants -->
        <record id="view_etudiant_search" model="ir.ui.view">
            <field name="name">gestion.etudiant.search</field>
            <field name="model">gestion.etudiant</field>
            <field name="arch" type="xml">
                <search string="Rechercher Étudiant">
                    <field name="display_name"/>
                    <field name="cne"/>
                    <field name="cin"/>
                    <field name="email"/>
                    <field name="filiere"/>
                    <field name="niveau"/>
                    <separator/>
                    <filter string="Actifs" name="actif" domain="[('state','=','actif')]"/>
                    <filter string="Diplômés" name="diplome" domain="[('state','=','diplome')]"/>
                    <filter string="Informatique" name="informatique" domain="[('filiere','=','informatique')]"/>
                    <separator/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Filière" name="group_filiere" context="{'group_by': 'filiere'}"/>
                        <filter string="Niveau" name="group_niveau" context="{'group_by': 'niveau'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue formulaire des étudiants -->
        <record id="view_etudiant_form" model="ir.ui.view">
            <field name="name">gestion.etudiant.form</field>
            <field name="model">gestion.etudiant</field>
            <field name="arch" type="xml">
                <form string="Étudiant">
                    <header>
                        <button name="action_view_projets" type="object" 
                                class="btn-primary" string="Voir Projets" 
                                invisible="projet_count == 0"/>
                        <button name="action_view_taches" type="object" 
                                class="btn-secondary" string="Voir Tâches" 
                                invisible="tache_count == 0"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_projets" type="object" 
                                    class="oe_stat_button" icon="fa-briefcase">
                                <div class="o_stat_info">
                                    <field name="projet_count" widget="statinfo" string="Projets"/>
                                </div>
                            </button>
                            <button name="action_view_taches" type="object" 
                                    class="oe_stat_button" icon="fa-tasks">
                                <div class="o_stat_info">
                                    <field name="tache_count" widget="statinfo" string="Tâches"/>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="image_1920" class="oe_edit_only"/>
                            <h1>
                                <field name="display_name" placeholder="Nom Complet"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations Personnelles">
                                <field name="image_1920" widget="image" class="oe_avatar"/>
                                <field name="name"/>
                                <field name="prenom"/>
                                <field name="cin"/>
                                <field name="cne"/>
                                <field name="date_naissance"/>
                                <field name="lieu_naissance"/>
                            </group>
                            <group string="Informations Académiques">
                                <field name="filiere"/>
                                <field name="niveau"/>
                                <field name="annee_academique"/>
                                <field name="moyenne_generale"/>
                                <field name="credit_acquis"/>
                            </group>
                        </group>
                        <group>
                            <group string="Coordonnées">
                                <field name="email"/>
                                <field name="telephone"/>
                                <field name="adresse" nolabel="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Projets" attrs="{'invisible': [('projet_count', '=', 0)]}">
                                <field name="projet_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="type_projet"/>
                                        <field name="state" widget="badge"/>
                                        <field name="note"/>
                                    </tree>
                                    <form>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="type_projet"/>
                                        <field name="state"/>
                                        <field name="note"/>
                                    </form>
                                </field>
                            </page>
                            <page string="Tâches" attrs="{'invisible': [('tache_count', '=', 0)]}">
                                <field name="tache_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="projet_id"/>
                                        <field name="date_debut"/>
                                        <field name="date_fin"/>
                                        <field name="state" widget="badge"/>
                                        <field name="avancement" widget="progressbar"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue kanban des étudiants -->
        <record id="view_etudiant_kanban" model="ir.ui.view">
            <field name="name">gestion.etudiant.kanban</field>
            <field name="model">gestion.etudiant</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="display_name"/>
                    <field name="filiere"/>
                    <field name="state"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('gestion.etudiant', 'image_1920', record.id.raw_value)" alt="Avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div>
                                        <field name="filiere" widget="badge"/>
                                    </div>
                                    <div>
                                        <field name="state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>