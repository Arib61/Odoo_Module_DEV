<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue arbre des enseignants -->
        <record id="view_enseignant_tree" model="ir.ui.view">
            <field name="name">gestion.enseignant.tree</field>
            <field name="model">gestion.enseignant</field>
            <field name="arch" type="xml">
                <tree string="Enseignants">
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <field name="display_name"/>
                    <field name="grade"/>
                    <field name="specialite"/>
                    <field name="departement"/>
                    <field name="email"/>
                    <field name="projet_count" widget="statinfo"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche des enseignants -->
        <record id="view_enseignant_search" model="ir.ui.view">
            <field name="name">gestion.enseignant.search</field>
            <field name="model">gestion.enseignant</field>
            <field name="arch" type="xml">
                <search string="Rechercher Enseignant">
                    <field name="display_name"/>
                    <field name="cin"/>
                    <field name="email"/>
                    <field name="grade"/>
                    <field name="specialite"/>
                    <separator/>
                    <filter string="Actifs" name="actif" domain="[('state','=','actif')]"/>
                    <filter string="Retraités" name="retraite" domain="[('state','=','retraite')]"/>
                    <separator/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Grade" name="group_grade" context="{'group_by': 'grade'}"/>
                        <filter string="Département" name="group_departement" context="{'group_by': 'departement'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue formulaire des enseignants -->
        <record id="view_enseignant_form" model="ir.ui.view">
            <field name="name">gestion.enseignant.form</field>
            <field name="model">gestion.enseignant</field>
            <field name="arch" type="xml">
                <form string="Enseignant">
                    <header>
                        <button name="action_view_projets" type="object" 
                                class="btn-primary" string="Projets Supervisés" 
                                invisible="projet_count == 0"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_projets" type="object" 
                                    class="oe_stat_button" icon="fa-briefcase">
                                <div class="o_stat_info">
                                    <field name="projet_count" widget="statinfo" string="Projets"/>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="image_1920" class="oe_edit_only"/>
                            <h1>
                                <field name="display_name" placeholder="Nom Complet"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations Personnelles">
                                <field name="image_1920" widget="image" class="oe_avatar"/>
                                <field name="name"/>
                                <field name="prenom"/>
                                <field name="cin"/>
                                <field name="date_naissance"/>
                                <field name="lieu_naissance"/>
                            </group>
                            <group string="Informations Professionnelles">
                                <field name="grade"/>
                                <field name="specialite"/>
                                <field name="departement"/>
                                <field name="bureau"/>
                                <field name="date_embauche"/>
                                <field name="salaire"/>
                            </group>
                        </group>
                        <group>
                            <group string="Coordonnées">
                                <field name="email"/>
                                <field name="telephone"/>
                                <field name="adresse" nolabel="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Projets Supervisés" attrs="{'invisible': [('projet_count', '=', 0)]}">
                                <field name="projet_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="etudiant_id"/>
                                        <field name="state" widget="badge"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Soutenances">
                                <field name="soutenance_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="projet_id"/>
                                        <field name="date_soutenance"/>
                                        <field name="salle"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue kanban des enseignants -->
        <record id="view_enseignant_kanban" model="ir.ui.view">
            <field name="name">gestion.enseignant.kanban</field>
            <field name="model">gestion.enseignant</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="display_name"/>
                    <field name="grade"/>
                    <field name="state"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('gestion.enseignant', 'image_1920', record.id.raw_value)" alt="Avatar"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div>
                                        <field name="grade" widget="badge"/>
                                    </div>
                                    <div>
                                        <field name="state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>