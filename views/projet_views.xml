<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue arbre des projets -->
        <record id="view_projet_tree" model="ir.ui.view">
            <field name="name">gestion.projet.tree</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <tree string="Projets">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="etudiant_id"/>
                    <field name="enseignant_id"/>
                    <field name="type_projet"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="avancement" widget="progressbar"/>
                    <field name="state" widget="badge"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche des projets -->
        <record id="view_projet_search" model="ir.ui.view">
            <field name="name">gestion.projet.search</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <search string="Rechercher Projet">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="etudiant_id"/>
                    <field name="enseignant_id"/>
                    <separator/>
                    <filter string="Brouillon" name="brouillon" domain="[('state','=','brouillon')]"/>
                    <filter string="En Cours" name="en_cours" domain="[('state','=','en_cours')]"/>
                    <filter string="Soutenus" name="soutenu" domain="[('state','=','soutenu')]"/>
                    <filter string="Validés" name="valide" domain="[('state','=','valide')]"/>
                    <filter string="En Retard" name="retard" domain="[('date_fin','&lt;',context_today())]"/>
                    <separator/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Type de Projet" name="group_type" context="{'group_by': 'type_projet'}"/>
                        <filter string="Encadrant" name="group_enseignant" context="{'group_by': 'enseignant_id'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue formulaire des projets -->
        <record id="view_projet_form" model="ir.ui.view">
            <field name="name">gestion.projet.form</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <form string="Projet">
                    <header>
                        <button name="action_demarrer_projet" type="object" 
                                attrs="{'invisible': [('state','!=','brouillon')]}" 
                                class="btn-primary" string="Démarrer"/>
                        <button name="action_soutenir" type="object" 
                                attrs="{'invisible': [('state','!=','en_cours')]}" 
                                class="btn-success" string="Marquer comme Soutenu"/>
                        <button name="action_valider" type="object" 
                                attrs="{'invisible': [('state','!=','soutenu')]}" 
                                class="btn-success" string="Valider"/>
                        <button name="action_refuser" type="object" 
                                attrs="{'invisible': [('state','!=','soutenu')]}" 
                                class="btn-danger" string="Refuser"/>
                        <button name="action_view_taches" type="object" 
                                class="btn-secondary" string="Tâches"/>
                        <button name="action_view_soutenance" type="object" 
                                class="btn-info" string="Soutenance"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_taches" type="object" 
                                    class="oe_stat_button" icon="fa-tasks">
                                <div class="o_stat_info">
                                    <field name="tache_count" widget="statinfo" string="Tâches"/>
                                </div>
                            </button>
                            <button name="action_view_soutenance" type="object" 
                                    class="oe_stat_button" icon="fa-graduation-cap">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Soutenance</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Titre du projet"/>
                            </h1>
                            <div class="o_row">
                                <field name="code" class="oe_inline"/>
                                <field name="type_projet" class="oe_inline"/>
                                <field name="domaine" class="oe_inline"/>
                            </div>
                        </div>
                        <group>
                            <group string="Informations Générales">
                                <field name="description" nolabel="1"/>
                                <field name="mots_cles"/>
                            </group>
                            <group string="Dates">
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="date_soutenance"/>
                                <field name="duree" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Participants">
                                <field name="etudiant_id"/>
                                <field name="etudiant_ids" widget="many2many_tags"/>
                                <field name="enseignant_id"/>
                                <field name="jury_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Évaluation">
                                <field name="note"/>
                                <field name="mention"/>
                                <field name="avancement" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tâches">
                                <field name="tache_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="etudiant_id"/>
                                        <field name="date_debut"/>
                                        <field name="date_fin"/>
                                        <field name="priorite" widget="priority"/>
                                        <field name="state" widget="badge"/>
                                        <field name="avancement" widget="progressbar"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents">
                                <group>
                                    <field name="document_name"/>
                                    <field name="document_principal" filename="document_name"/>
                                </group>
                            </page>
                            <page string="Soutenances" attrs="{'invisible': [('soutenance_ids', '=', [])]}">
                                <field name="soutenance_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date_soutenance"/>
                                        <field name="salle"/>
                                        <field name="state" widget="badge"/>
                                        <field name="note_finale"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue calendrier des projets -->
        <record id="view_projet_calendar" model="ir.ui.view">
            <field name="name">gestion.projet.calendar</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier des Projets" date_start="date_debut" date_stop="date_fin" color="state">
                    <field name="name"/>
                    <field name="etudiant_id"/>
                    <field name="enseignant_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Vue graphique des projets -->
        <record id="view_projet_graph" model="ir.ui.view">
            <field name="name">gestion.projet.graph</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <graph string="Statistiques des Projets">
                    <field name="state" type="row"/>
                    <field name="id" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Vue pivot des projets -->
        <record id="view_projet_pivot" model="ir.ui.view">
            <field name="name">gestion.projet.pivot</field>
            <field name="model">gestion.projet</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des Projets">
                    <field name="state" type="row"/>
                    <field name="type_projet" type="col"/>
                    <field name="avancement" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>